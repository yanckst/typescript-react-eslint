{
  "name": "typescript-react-eslint",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "classnames": "2.2.6",
    "react": "^16.13.0",
    "lodash": "4.17.15",
    "react-jss": "10.0.0",
    "react-dom": "^16.13.0",
    "react-scripts": "3.4.0",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/node": "^13.9.0",
    "@types/classnames": "2.2.7",
    "@types/jest-environment-puppeteer": "4.3.1",
    "@types/lodash": "4.14.130",
    "@types/react": "16.8.18",
    "@types/react-dom": "16.8.4",
    "@types/react-helmet": "5.0.8",
    "@types/react-modal": "3.8.2",
    "@types/react-router-dom": "5.1.3",
    "@types/react-test-renderer": "16.8.1",
    "@typescript-eslint/eslint-plugin": "2.22.0",
    "@typescript-eslint/parser": "2.22.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.5.0",
    "jest": "25.1.0",
    "jest-cli": "25.1.0",
    "jest-junit": "10.0.0",
    "@testing-library/react-hooks": "3.2.1",
    "parcel-bundler": "1.12.4",
    "parcel-plugin-bundle-visualiser": "1.2.0",
    "ts-jest": "25.2.1",
    "tslib": "1.10.0",
    "typescript": "3.7.2",
    "uglify-js": "3.5.15"
  },
  "scripts": {
    "start": "react-scripts start",
    "start2": "yarn run watch",
    "watch": "parcel watch src/index.html --out-dir dist/app --public-url /static/app",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test2": "yarn initialize && jest --coverage",
    "tsc": "tsc --project tsconfig.json --noEmit",
    "vscode:build": "yarn lint && npm run tsc",
    "lint": "eslint . --quiet --ext .ts --ext .tsx"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    },
    "setupFiles": [
      "<rootDir>/jest/setup.js"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass|svg|png|jpg)$": "<rootDir>/jest/file-mock.js"
    },
    "collectCoverageFrom": [
      "<rootDir>/**/*.ts",
      "<rootDir>/**/*.tsx",
      "!<rootDir>/**/__tests__/**"
    ],
    "coverageDirectory": "<rootDir>/test-reports",
    "coverageReporters": [
      "text-summary",
      "lcov"
    ],
    "testMatch": [
      "<rootDir>/**/__tests__/*.test.(ts|tsx)"
    ]
  },
  "jest-junit": {
    "outputDirectory": "./test-reports",
    "outputName": "junit.xml"
  }
}